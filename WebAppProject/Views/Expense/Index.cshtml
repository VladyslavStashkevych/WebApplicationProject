@model IEnumerable<WebAppProject.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0) {
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Purchase Name
                    </th>
                    <th>
                        Cost
                    </th>
            </thead>
            <tbody>
                @foreach (var expense in Model) {
                <tr>
                    <td width="35%">@expense.PurchaseName</td>
                    <td width="35%">@String.Format("${0:0.00}", expense.Cost)</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="Edit"       asp-route-id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expense" asp-action="DeletePost" asp-route-id="@expense.Id" class="btn btn-danger  mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else {
        <p>There is no items created</p>
    }
</div>